{
  "name": "least-watched",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:generate": "bunx prisma generate",
    "db:migrate:dev": "bunx prisma migrate dev",
    "db:migrate": "bunx prisma migrate deploy",
    "db:reset": "bunx prisma migrate reset",
    "db:seed": "bun run scripts/seed-database.ts",
    "db:status": "bunx prisma migrate status",
    "predev": "bun run db:generate",
    "dev": "next dev --turbopack",
    "prebuild": "bun run db:generate && bun run gen-api:all",
    "build": "next build",
    "start": "next start",
    "lint": "tsc --noEmit && next lint",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "openapi-ts": "openapi-ts",
    "gen-api:radarr": "openapi-ts -f ./openapi/openapi-ts.radarr.ts",
    "gen-api:sonarr": "openapi-ts -f ./openapi/openapi-ts.sonarr.ts",
    "gen-api:all": "bun run gen-api:radarr && bun run gen-api:sonarr"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "emby-sdk-stainless": "^0.2.1",
    "lucide-react": "^0.525.0",
    "luxon": "^3.7.1",
    "next": "15.3.5",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@hey-api/openapi-ts": "^0.80.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "prisma": "^6.12.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}